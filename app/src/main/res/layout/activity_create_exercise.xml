<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:fillViewport="true"
    android:id="@+id/create_exercise_activity_container"
    tools:context=".CreateExerciseActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Switch
            android:id="@+id/responseTimeTesting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:checked="false"
            android:text="Response Time Testing"
            android:textOff="disabled"
            android:textOn="enabled"
            app:layout_constraintEnd_toEndOf="@+id/switch_rotation"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_rotation" />

        <TextView
            android:id="@+id/textview_past_targets12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets11" />

        <TextView
            android:id="@+id/textview_past_targets11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets10" />

        <TextView
            android:id="@+id/textview_past_targets10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets9" />

        <TextView
            android:id="@+id/textview_past_targets9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets8" />

        <TextView
            android:id="@+id/textview_past_targets8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets7" />

        <TextView
            android:id="@+id/textview_past_targets7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets6" />

        <TextView
            android:id="@+id/textview_past_targets6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets5" />

        <TextView
            android:id="@+id/textview_past_targets5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets4" />

        <TextView
            android:id="@+id/textview_past_targets4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets3" />

        <TextView
            android:id="@+id/textview_past_targets3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets2" />

        <TextView
            android:id="@+id/textview_past_targets2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets1" />

        <TextView
            android:id="@+id/create_exercise_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_create_exercise"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.005" />

        <EditText
            android:id="@+id/title_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Name of Exercise"
            android:inputType="text"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/create_exercise_header" />

        <Switch
            android:id="@+id/switch_flexion_extension"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:checked="true"
            android:text="@string/switch_text_flexion_extension"
            android:textOff="disabled"
            android:textOn="enabled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/switch_abduction_adduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="true"
            android:text="@string/switch_text_abduction_adduction"
            android:textOff="disabled"
            android:textOn="enabled"
            app:layout_constraintEnd_toEndOf="@+id/switch_flexion_extension"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_flexion_extension" />

        <Switch
            android:id="@+id/switch_rotation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="true"
            android:text="@string/switch_text_rotation"
            android:textOff="disabled"
            android:textOn="enabled"
            app:layout_constraintEnd_toEndOf="@+id/switch_abduction_adduction"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch_abduction_adduction" />

        <EditText
            android:id="@+id/create_exercise_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:imeOptions="actionDone"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toTopOf="@+id/btn_done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numberpicker_repetitions" />

        <Spinner
            android:id="@+id/spinner_choose_joint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner_location_joint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"
            android:textAlignment="center"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/spinner_choose_joint"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1550dp"
            android:text="@string/done"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.529"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="236dp"
            android:layout_marginEnd="116dp"
            android:text="Range of Motion Notes"
            android:textColor="@color/purple_700"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_exercise" />

        <EditText
            android:id="@+id/coordinatesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:hint="Type as ,flex#,rot#,abd# repeat for more positions"
            android:inputType="text"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/textView13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_flex_angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginTop="380dp"
            android:text="@string/flexion_angle_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_abd_angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/abduction_angle_text"
            app:layout_constraintEnd_toEndOf="@+id/text_flex_angle"
            app:layout_constraintTop_toBottomOf="@+id/text_flex_angle" />

        <TextView
            android:id="@+id/text_rot_angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/internal_rotation_angle_text"
            app:layout_constraintEnd_toEndOf="@+id/text_flex_angle"
            app:layout_constraintTop_toBottomOf="@+id/text_abd_angle" />

        <TextView
            android:id="@+id/text_extend_angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="60dp"
            android:text="@string/extension_angle_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_adduct_angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adduction_angle_text"
            app:layout_constraintEnd_toEndOf="@+id/text_extend_angle"
            app:layout_constraintTop_toBottomOf="@+id/text_extend_angle" />

        <TextView
            android:id="@+id/text_external_rot_angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/external_rotation_angle_text"
            app:layout_constraintEnd_toEndOf="@+id/text_extend_angle"
            app:layout_constraintTop_toBottomOf="@+id/text_adduct_angle" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:text="Patient Target(s)"
            android:textColor="@color/forestgreen"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.447"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/text_target_f_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="Flexion/\nExtension"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textview_past_targets12" />

        <TextView
            android:id="@+id/text_target_abd_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Abduction/\nAdduction"
            app:layout_constraintEnd_toEndOf="@+id/text_target_f_e"
            app:layout_constraintTop_toBottomOf="@+id/text_target_f_e" />

        <TextView
            android:id="@+id/text_target_int_ext_rot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Internal/\nExternal\nRotation"
            app:layout_constraintEnd_toEndOf="@+id/text_target_abd_add"
            app:layout_constraintTop_toBottomOf="@+id/text_target_abd_add" />

        <Button
            android:id="@+id/btn_target_flex_low"
            android:layout_width="63dp"
            android:layout_height="37dp"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/navy"
            android:text="Min"
            app:layout_constraintBottom_toBottomOf="@+id/text_target_f_e"
            app:layout_constraintStart_toEndOf="@+id/text_target_f_e"
            app:layout_constraintTop_toTopOf="@+id/text_target_f_e"
            app:layout_constraintVertical_bias="0.388" />

        <Button
            android:id="@+id/btn_target_extend_high"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_marginEnd="20dp"
            android:text="Max"
            android:backgroundTint="@color/orangered"
            app:layout_constraintBottom_toBottomOf="@+id/text_target_f_e"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_target_f_e" />

        <Button
            android:id="@+id/btn_target_abd"
            android:layout_width="63dp"
            android:layout_height="37dp"
            android:backgroundTint="@color/navy"
            android:text="Min"
            app:layout_constraintBottom_toBottomOf="@+id/text_target_abd_add"
            app:layout_constraintEnd_toEndOf="@+id/btn_target_flex_low"
            app:layout_constraintTop_toTopOf="@+id/text_target_abd_add" />

        <Button
            android:id="@+id/btn_target_add"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:backgroundTint="@color/orangered"
            android:text="Max"
            app:layout_constraintBottom_toBottomOf="@+id/btn_target_abd"
            app:layout_constraintEnd_toEndOf="@+id/btn_target_extend_high"
            app:layout_constraintTop_toTopOf="@+id/btn_target_abd" />

        <Button
            android:id="@+id/btn_target_int_rot"
            android:layout_width="63dp"
            android:layout_height="37dp"
            android:backgroundTint="@color/navy"
            android:text="Min"
            app:layout_constraintBottom_toBottomOf="@+id/text_target_int_ext_rot"
            app:layout_constraintEnd_toEndOf="@+id/btn_target_abd"
            app:layout_constraintTop_toTopOf="@+id/text_target_int_ext_rot" />

        <Button
            android:id="@+id/btn_target_ext_rot"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:backgroundTint="@color/orangered"
            android:text="Max"
            app:layout_constraintBottom_toBottomOf="@+id/btn_target_int_rot"
            app:layout_constraintEnd_toEndOf="@+id/btn_target_add"
            app:layout_constraintTop_toTopOf="@+id/btn_target_int_rot"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/edittext_target_f_e_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="∠(°)"
            android:inputType="number"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_target_f_e"
            app:layout_constraintEnd_toStartOf="@+id/btn_target_extend_high"
            app:layout_constraintStart_toEndOf="@+id/btn_target_flex_low"
            app:layout_constraintTop_toTopOf="@+id/text_target_f_e">

        </EditText>

        <EditText
            android:id="@+id/edittext_target_abd_add_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="∠(°)"
            android:inputType="number"
            android:textSize="15sp"

            app:layout_constraintBottom_toBottomOf="@+id/text_target_abd_add"
            app:layout_constraintEnd_toStartOf="@+id/btn_target_add"
            app:layout_constraintStart_toEndOf="@+id/btn_target_abd"
            app:layout_constraintTop_toTopOf="@+id/text_target_abd_add">

        </EditText>

        <EditText
            android:id="@+id/edittext_target_int_ext_rot_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="∠(°)"
            android:inputType="number"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_target_int_ext_rot"
            app:layout_constraintEnd_toStartOf="@+id/btn_target_ext_rot"
            app:layout_constraintStart_toEndOf="@+id/btn_target_int_rot"
            app:layout_constraintTop_toTopOf="@+id/text_target_int_ext_rot">

        </EditText>

        <Button
            android:id="@+id/btn_next_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/cyan"
            android:text="Next Target"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_target_int_rot" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="152dp"
            android:text="Completion of Exercise"
            android:textColor="@color/brightred"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_next_target" />

        <Spinner
            android:id="@+id/spinner_length_of_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19">
        </Spinner>

        <NumberPicker
            android:id="@+id/numberpicker_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/numberpicker_seconds"
            app:layout_constraintHorizontal_bias="0.451"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_length_of_exercise">

        </NumberPicker>

        <NumberPicker
            android:id="@+id/numberpicker_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="88dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/numberpicker_minutes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/numberpicker_minutes"
            app:layout_constraintVertical_bias="0.0">

        </NumberPicker>

        <TextView
            android:id="@+id/text_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minutes"
            android:textColor="@color/navy"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/numberpicker_minutes"
            app:layout_constraintStart_toStartOf="@+id/numberpicker_minutes"
            app:layout_constraintTop_toBottomOf="@+id/numberpicker_minutes" />

        <TextView
            android:id="@+id/text_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seconds"
            android:textColor="@color/navy"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/numberpicker_seconds"
            app:layout_constraintStart_toStartOf="@+id/numberpicker_seconds"
            app:layout_constraintTop_toBottomOf="@+id/numberpicker_seconds" />

        <NumberPicker
            android:id="@+id/numberpicker_repetitions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spinner_length_of_exercise">

        </NumberPicker>

        <TextView
            android:id="@+id/textview_past_targets1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <Button
            android:id="@+id/btn_reset_targets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Targets"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_next_target" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>