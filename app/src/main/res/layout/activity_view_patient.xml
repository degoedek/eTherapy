<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context=".ViewPatientActivity">

    <TextView
        android:id="@+id/exerciseNameList"
        android:layout_width="265dp"
        android:layout_height="240dp"
        android:layout_marginTop="24dp"
        android:text="No Exercises Assigned"
        android:textColor="@color/blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/edittext_patient_information_comments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.208" />

    <EditText
        android:id="@+id/edittext_patient_information_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingTop="5dp"
        android:text="Patient Name"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/IDEditText"
        android:layout_width="274dp"
        android:layout_height="51dp"
        android:paddingTop="15dp"
        android:text="ID Numbers"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/PasswordEditText"
        android:layout_width="176dp"
        android:layout_height="45dp"
        android:paddingTop="15dp"
        android:text="Password Numbers"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

    <TextView
        android:id="@+id/TherapistIdInfo"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:paddingTop="15dp"
        android:text="@string/id"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/Password"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:paddingTop="15dp"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Exercises"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_goniometer"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edittext_patient_information_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Comments"
        app:layout_constraintBottom_toTopOf="@+id/btn_save_patient_that_exists"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"></EditText>

    <Button
        android:id="@+id/btn_save_patient_that_exists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cornflowerblue"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Range Of Motion Data"
        android:textColor="@color/royalblue"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_patient_information_name" />

    <TextView
        android:id="@+id/text_patient_flex_ROM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:text="Flexion:"
        android:textColor="@color/darkred"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/text_patient_extend_ROM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="24dp"
        android:text="Extension:"
        android:textColor="@color/darkred"
        app:layout_constraintStart_toEndOf="@id/personal_flex_ROM_data"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/text_patient_abd_ROM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Abduction:"
        android:textColor="@color/darkgreen"
        app:layout_constraintEnd_toEndOf="@+id/text_patient_flex_ROM"
        app:layout_constraintStart_toStartOf="@+id/text_patient_flex_ROM"
        app:layout_constraintTop_toBottomOf="@+id/text_patient_flex_ROM" />

    <TextView
        android:id="@+id/text_patient_add_ROM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Adduction:"
        android:textColor="@color/darkgreen"
        app:layout_constraintEnd_toEndOf="@+id/text_patient_extend_ROM"
        app:layout_constraintStart_toStartOf="@+id/text_patient_extend_ROM"
        app:layout_constraintTop_toBottomOf="@+id/text_patient_extend_ROM" />

    <TextView
        android:id="@+id/text_patient_int_rot_ROM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Internal Rotation:"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="@+id/text_patient_abd_ROM"
        app:layout_constraintStart_toStartOf="@+id/text_patient_abd_ROM"
        app:layout_constraintTop_toBottomOf="@+id/text_patient_abd_ROM" />

    <TextView
        android:id="@+id/text_patient_ext_rot_ROM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="External Rotation:"
        android:textColor="@color/purple_500"
        app:layout_constraintEnd_toEndOf="@+id/text_patient_add_ROM"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_patient_add_ROM"
        app:layout_constraintTop_toBottomOf="@+id/text_patient_add_ROM" />

    <TextView
        android:id="@+id/personal_flex_ROM_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="0°"
        android:textColor="@color/darkred"
        app:layout_constraintBottom_toBottomOf="@+id/text_patient_flex_ROM"
        app:layout_constraintStart_toEndOf="@+id/text_patient_flex_ROM"
        app:layout_constraintTop_toTopOf="@+id/text_patient_flex_ROM" />

    <TextView
        android:id="@+id/personal_extend_ROM_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="0°"
        android:textColor="@color/darkred"
        app:layout_constraintBottom_toBottomOf="@+id/text_patient_extend_ROM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_patient_extend_ROM"
        app:layout_constraintTop_toTopOf="@+id/text_patient_extend_ROM" />

    <TextView
        android:id="@+id/personal_abd_ROM_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°"
        android:textColor="@color/darkgreen"
        app:layout_constraintBottom_toBottomOf="@+id/text_patient_abd_ROM"
        app:layout_constraintEnd_toEndOf="@+id/personal_flex_ROM_data"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/personal_flex_ROM_data" />

    <TextView
        android:id="@+id/personal_add_ROM_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°"
        android:textColor="@color/darkgreen"
        app:layout_constraintBottom_toBottomOf="@+id/text_patient_add_ROM"
        app:layout_constraintEnd_toEndOf="@+id/personal_extend_ROM_data"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/personal_extend_ROM_data" />

    <TextView
        android:id="@+id/personal_int_rot_ROM_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="@+id/text_patient_int_rot_ROM"
        app:layout_constraintEnd_toEndOf="@+id/personal_abd_ROM_data"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/personal_abd_ROM_data" />

    <TextView
        android:id="@+id/personal_ext_rot_ROM_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0°"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toBottomOf="@+id/text_patient_int_rot_ROM"
        app:layout_constraintEnd_toEndOf="@+id/personal_add_ROM_data"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/personal_add_ROM_data" />

    <Button
        android:id="@+id/btn_goniometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/brown"
        android:text="Goniometer"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_patient_int_rot_ROM" />


</androidx.constraintlayout.widget.ConstraintLayout>